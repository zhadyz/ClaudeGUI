{
  "name": "claude-gui",
  "version": "1.0.0",
  "description": "An elegant GUI wrapper for Claude Code CLI",
  "main": "dist/main/main/index.js",
  "author": "ClaudeGUI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/claudegui/claude-gui"
  },
  "scripts": {
    "dev": "concurrently -k \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run generate-icons && npm run build && electron-builder",
    "generate-icons": "node scripts/generate-icon.js"
  },
  "dependencies": {
    "framer-motion": "^11.0.0",
    "katex": "^0.16.27",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.0",
    "rehype-highlight": "^7.0.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "crc-32": "^1.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.claudegui.app",
    "productName": "ClaudeGUI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/icon.ico",
      "publisherName": "ClaudeGUI",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico",
      "installerHeaderIcon": "assets/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ClaudeGUI",
      "include": "installer.nsh",
      "license": "LICENSE",
      "runAfterFinish": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    },
    "publish": null
  }
}
